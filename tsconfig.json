{
    "compilerOptions": {
        "target": "es6",                          // Specify ECMAScript target version
        "module": "commonjs",                     // Specify module code generation
        "outDir": "./dist",                       // Redirect output structure to the 'dist' directory
        "rootDir": ".",                           // Set the root directory for input files
        "strict": true,                           // Enable all strict type-checking options
        "esModuleInterop": true,                  // Enable emit interoperability between CommonJS and ES Modules
        "skipLibCheck": true,                     // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true  // Disallow inconsistently-cased references to the same file
    },
    "include": ["src/**/*", "tests/**/*"],       // Include all .ts files in the src and tests directories
    "exclude": ["node_modules", "dist"]          // Exclude the specified directories
}